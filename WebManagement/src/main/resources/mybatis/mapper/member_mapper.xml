<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "mybatis-3-mapper.dtd">

<mapper namespace="com.mrc.db.dao">
	<select id="getMemberList"  parameterType="com.mrc.db.dto.T_MEMBER_COND"  resultType="com.mrc.db.dto.T_MEMBER">
		SELECT *
		FROM T_MEMBER
		<where>
			<if test="MEMBER_CODE != null ">
				AND KEYWORD LIKE #{MEMBER_CODE}
			</if>
			<if test="MEMBER_ID != null and MEMBER_ID != '' ">
				AND MEMBER_ID = #{MEMBER_ID}
			</if>
			<if test="MEMBER_PW != null and MEMBER_PW != '' ">
				AND MEMBER_PW = #{MEMBER_PW}
			</if>
			<if test="MEMBER_NAME != null and MEMBER_NAME != '' ">
				AND MEMBER_NAME LIKE CONCAT(‘%’, #{MEMBER_NAME}, ‘%’)
			</if>
		</where>
	</select>
</mapper>